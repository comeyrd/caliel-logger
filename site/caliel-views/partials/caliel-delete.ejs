<div class="row mt-3">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Delete Logger</h5>
                <form action="/caliel/delete-logger" method="POST">
                    <div class="mb-3">
                        <label for="selectId" class="form-label">Select ID:</label>
                        <select class="form-select" id="selectId" name="id">
                            <% users.forEach(function(user) { %>
                                <option value="<%= user.id %>"><%= user.id %></option>
                            <% }); %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <br>
            </div>
        </div>
    </div>
</div>